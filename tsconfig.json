{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES2020",
    "lib": ["ES2016", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist/esm",
    "moduleResolution": "node"
  },
  "include": ["src"]
}
